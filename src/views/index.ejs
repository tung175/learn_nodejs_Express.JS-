<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <title>Nodejs</title>
</head>

<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/upload">Upload file</a>
    </div>

    <div style="padding-left:16px">
        <div class="w3-container">
            <h2>List user Table</h2>

            <table class="w3-table-all w3-hoverable">
                <thead>
                    <tr class="w3-light-grey">
                        <th>id</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>address</th>
                        <th>action</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i=0; i < dataUser.length; i++) { %>
                        <tr>
                            <td>
                                <%= dataUser[i].id %>
                            </td>
                            <td>
                                <%= dataUser[i].fName %>
                            </td>
                            <td>
                                <%= dataUser[i].lName %>
                            </td>
                            <td>
                                <%= dataUser[i].email %>
                            </td>
                            <td>
                                <%= dataUser[i].address %>
                            </td>
                            <td>
                                <button type="button"> <a href="/detail/user/<%= dataUser[i].id %>"
                                        target="_blank">Detail</a></button>
                                <form action="/delete-user" method="POST">
                                    <input type="text" name="userId" hidden value="<%= dataUser[i].id%>">
                                    <button type="submit">Delete</button>
                                </form>
                                <form action="/edit-user/<%= dataUser[i].id %>" method="GET">
                                    <button type="submit">Edit</button>
                                </form>

                            </td>
                        </tr>
                        <% } %>
                            </tr>
                </tbody>
            </table>
        </div>
        <div class="create-user-container">
            <form action="/create-new-user" method="POST">
                <div> <b>create a new user</b> </div>
                <div>
                    <label for="">First Name:</label>
                    <input type="text" name="firstName">
                </div>
                <div>
                    <label for="">Last Name:</label>
                    <input type="text" name="lastName">
                </div>
                <div>
                    <label for="">Email:</label>
                    <input type="email" name="email">
                </div>
                <div>
                    <label for="">Address:</label>
                    <input type="text" name="address">
                </div>

                <div>
                    <button type="submit" class="btn-submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <!-- <%= dataUser %> -->

</body>

</html>